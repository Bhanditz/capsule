
if(APPLE)
  set(ENV{MACOSX_DEPLOYMENT_TARGET} "10.7")
  set(ENV{CFLAGS} "-arch @FFMPEG_ARCH@ -mmacosx-version-min=10.7")
  set(ENV{CXXFLAGS} "-arch @FFMPEG_ARCH@ -mmacosx-version-min=10.7")
  set(ENV{CPPFLAGS} "-arch @FFMPEG_ARCH@ -mmacosx-version-min=10.7")
  set(ENV{LDFLAGS} "-arch @FFMPEG_ARCH@ -mmacosx-version-min=10.7")
endif()

  EXECUTE_PROCESS(
    COMMAND sh ./configure --disable-static --disable-network --disable-zlib --disable-ffserver --disable-ffplay --disable-decoders --enable-shared --enable-swscale --prefix=@ffmpeg_install@
    WORKING_DIRECTORY "@ffmpeg_source@"
    RESULT_VARIABLE rv
    )
